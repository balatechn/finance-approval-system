{
  "installCommand": "npm install --legacy-peer-deps",
  "buildCommand": "prisma generate && next build",
  "crons": [
    {
      "path": "/api/cron/check-sla",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/check-sla?mode=reminder",
      "schedule": "30 3 * * *"
    },
    {
      "path": "/api/cron/check-sla?mode=reminder",
      "schedule": "30 9 * * *"
    }
  ]
}
